NODE_ENV=development
LOCAL_PORT=3333

SYSTEM_NAME=

# ============================================
# Autenticação Legacy (compatibilidade)
# ============================================
X_AUTH_API=
AUTH_TOKEN=

# ============================================
# Multi-Tenant Configuration
# ============================================
# URL do frontend para sincronização de tokens
FRONTEND_API_URL=http://localhost:3000

# Token interno para comunicação backend<->frontend
# Deve ser o mesmo que BACKEND_API_TOKEN no frontend
INTERNAL_SYNC_TOKEN=

# ============================================
# WhatsApp Configuration
# ============================================
# Identificação padrão da conexão (usado apenas na primeira inicialização)
IDENTIFICATION=mensageria

# URL de callback para sincronizar grupos com o frontend
WHATSAPP_GROUPS_CALLBACK_URL=http://localhost:3000/api/whatsapp/groups

# ============================================
# Informações do cliente (legacy)
# ============================================
API_URL=

# ============================================
# Telegram Configuration
# ============================================
# BOT TOKEN - Obtido no BotFather via Telegram (/start -> /newbot)
# Nota: Telegram requer Chat ID do destinatário, não apenas o número
TELEGRAM_BOT_TOKEN=
TELEGRAM_CALL_BACK_URL_TO_SEND_USER_ID=
